extends ../layout

block content
  h1= title
  form
    p
      label(for='title') Title
      input#title(name='title' type='text' value=book.title disabled)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=book.author disabled)
    p
      label(for='genre') Genre
      input#genre(name='genre' type='text' value=book.genre disabled)
    p
      label(for='year') Year
      input#year(name='year' type='text' value=book.year disabled)
    p(style="margin-bottom: 30px")
      a.button(href="/books/" + book.id + "/update") Update Book
    p
      a.button(href='../') View all books &rarr;